<Page x:Class="laba_7.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:laba_7"
      xmlns:rrr="clr-namespace:laba_7.Start"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SecondPage">
    
    <Page.CommandBindings>
        <CommandBinding Command="{x:Static rrr:MyCommand.SayHello}" Executed="MyCustomExecuted"/>
    </Page.CommandBindings>

    <Viewbox>
        <Grid Height="450" Width="800" Background="White" >
            <Button Click ="ClickFone"/>
            <Grid x:Name="bottom" Margin="52,112,523,112" Background="yellow" MouseDown="bottomClickYellow">
                <Grid Margin="50,90,50,10" Background="Orange" MouseDown="bottomClickOrange"/>
            </Grid>

            <Grid x:Name="top" Margin="479,112,96,112" Background="Orange" PreviewMouseDown="topClickOrange">
                <Grid Margin="50,90,50,10" Background="Yellow" PreviewMouseDown="topClickYellow"/>
            </Grid>

            <Button Margin="0,372,0,0" Command="{x:Static rrr:MyCommand.SayHello}"/>
        </Grid>
    </Viewbox>
</Page>
