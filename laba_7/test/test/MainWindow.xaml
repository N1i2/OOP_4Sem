<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Button Content="Direct Routing" Width="150" Height="50" Click="Direct_Click"
                HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button Content="Tunneling Routing" Width="150" Height="50"
                Tunneling.Click="Tunneling_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Bubbling Routing" Width="150" Height="50" Click="Bubbling_Click"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
